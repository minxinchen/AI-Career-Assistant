# AI Career Assistant - Environment Configuration Template
# Copy to .env and fill in your actual values

# === Core Application Settings ===
NODE_ENV=development
PORT=3001
FRONTEND_PORT=3000
AI_SERVICES_PORT=8000

# === Security Configuration ===
# Generate a strong session secret: openssl rand -base64 32
SESSION_SECRET=your-super-secret-session-key-here

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=1h

# === AI/ML API Keys ===
# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.3

# Google Cloud Vision API
GOOGLE_VISION_API_KEY=your-google-cloud-vision-key-here
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account.json

# === Database & Caching ===
# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password-here
REDIS_DB=0
REDIS_TTL=600

# === Job Platform APIs ===
# 104 人力銀行 API
JOB104_API_KEY=your-104-api-key-here
JOB104_BASE_URL=https://www.104.com.tw/api

# LinkedIn API (if available)
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# === File Processing Configuration ===
# File Upload Limits
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document
UPLOAD_TIMEOUT=30000    # 30 seconds

# Temporary File Storage
TEMP_DIR=./temp
AUTO_CLEANUP_INTERVAL=300000  # 5 minutes

# === Rate Limiting Configuration ===
RATE_LIMIT_WINDOW=900000      # 15 minutes
RATE_LIMIT_MAX_REQUESTS=10    # requests per window
API_RATE_LIMIT=100            # API calls per hour

# === Security Headers Configuration ===
CORS_ORIGIN=http://localhost:3000
HELMET_CSP_ENABLED=true

# === Logging Configuration ===
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log
ERROR_LOG_PATH=./logs/error.log

# === Performance Monitoring ===
# Application Performance Monitoring (optional)
APM_ENABLED=false
APM_SERVICE_NAME=ai-career-assistant
APM_SERVICE_VERSION=1.0.0

# === Vector Database Configuration ===
# Choose ONE vector database solution
VECTOR_DB_TYPE=faiss  # Options: faiss, pinecone, chromadb

# Pinecone Configuration (if using)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_INDEX_NAME=career-assistant
PINECONE_ENVIRONMENT=us-west1-gcp

# FAISS Configuration (if using)
FAISS_INDEX_PATH=./data/faiss_index
FAISS_DIMENSION=384

# ChromaDB Configuration (if using)  
CHROMADB_HOST=localhost
CHROMADB_PORT=8000
CHROMADB_COLLECTION=resumes

# === Development Configuration ===
# Development Tools
DEBUG_MODE=false
MOCK_AI_RESPONSES=false
SKIP_FILE_VALIDATION=false

# Testing Configuration
TEST_DATABASE_URL=redis://localhost:6380/1
TEST_UPLOAD_DIR=./test/uploads

# === Production Configuration ===
# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# Metrics Configuration  
METRICS_ENABLED=true
METRICS_PATH=/metrics

# === Docker Configuration ===
# Container Health Checks
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# === Backup Configuration ===
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30