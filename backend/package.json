    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .js",
    "lint:fix": "eslint src --ext .js --fix",
    "format": "prettier --write src/**/*.js"
  },
  "dependencies": {
    "express": "^4.18.0",
    "cors": "^2.8.5",
    "helmet": "^6.0.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5",
    "redis": "^4.5.0",
    "bull": "^4.10.0",
    "axios": "^1.3.0",
    "dotenv": "^16.0.0",
    "winston": "^3.8.0",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^6.14.0",
    "uuid": "^9.0.0",
    "pdf-parse": "^1.1.1",
    "mammoth": "^1.5.0",
    "jieba": "^0.4.0",
    "openai": "^4.0.0",
    "node-cron": "^3.0.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.0",
    "jest": "^29.0.0",
    "supertest": "^6.3.0",
    "eslint": "^8.0.0",
    "prettier": "^2.8.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
